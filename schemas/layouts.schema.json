{
  "$id": "layouts.schema.json",
  "type": "object",
  "required": ["canvas", "layouts"],
  "additionalProperties": false,
  "properties": {
    "spec_version": { "type": "string" },
    "source": { "type": "string" },
    "canvas": {
      "type": "object",
      "required": ["w", "h", "unit"],
      "additionalProperties": false,
      "properties": {
        "w":   { "type": "integer", "minimum": 640 },
        "h":   { "type": "integer", "minimum": 360 },
        "unit":{ "type": "string", "enum": ["px"] },
        "emu": {
          "type": "object",
          "required": ["cx","cy"],
          "additionalProperties": false,
          "properties": {
            "cx": { "type": "integer", "minimum": 1 },
            "cy": { "type": "integer", "minimum": 1 }
          }
        }
      }
    },
    "layouts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "placeholders"],
        "additionalProperties": false,
        "properties": {
          "id":        { "type": "string", "minLength": 1 },
          "pptxName":  { "type": "string" },
          "pptxType":  { "type": "string" },
          "file":      { "type": "string" },
          "placeholders": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name","type","x","y","w","h"],
              "additionalProperties": false,
              "properties": {
                "name": { "type": "string" },
                "type": { "type": "string" },
                "idx":  { "type": ["integer","null"] },
                "x":    { "type": "number", "minimum": 0 },
                "y":    { "type": "number", "minimum": 0 },
                "w":    { "type": "number", "exclusiveMinimum": 0 },
                "h":    { "type": "number", "exclusiveMinimum": 0 },
                "styleHint": { "type": "string" }
              }
            }
          },
          "footer": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type","x","y","w","h"],
              "additionalProperties": false,
              "properties": {
                "type": { "type": "string" },
                "x":    { "type": "number", "minimum": 0 },
                "y":    { "type": "number", "minimum": 0 },
                "w":    { "type": "number", "exclusiveMinimum": 0 },
                "h":    { "type": "number", "exclusiveMinimum": 0 }
              }
            }
          }
        }
      }
    }
  }
}
