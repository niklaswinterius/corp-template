{
  "$id": "content.request.schema.json",
  "type": "object",
  "required": ["slides"],
  "properties": {
    "slides": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["title"],
        "properties": {
          "title": { "type": "string", "minLength": 1, "maxLength": 160 },
          "subtitle": { "type": "string" },
          "blocks": {
            "type": "array",
            "minItems": 1,
            "items": { "$ref": "#/$defs/block" }
          },
          "meta": {
            "type": "object",
            "properties": {
              "date": { "type": "string" },
              "altTexts": { "type": "object" }
            }
          }
        }
      }
    }
  },
  "$defs": {
    "block": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { "type": "string", "enum": ["richtext", "image", "table", "chart"] },
        "bullets": { "type": "array", "items": { "type": "string" } },
        "url": { "type": "string" },
        "rows": { "type": "array" },
        "chartType": { "type": "string", "enum": ["bar", "line", "pie"] },
        "series": { "type": "array" },
        "categories": { "type": "array" },
        "alt": { "type": "string" }
      }
    }
  }
}
